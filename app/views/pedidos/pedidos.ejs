    <h1 class="text-center">Todos os Pedidos</h1>  

    <% if (pedidos != null){ %>

        <table class="table">
            <thead>
              <tr>
                <!--  <th class="text-center"scope="col">#</th>-->
                <th class="text-center"scope="col">Id</th>                
                <th class="text-center"scope="col">Fase</th>
                <th class="text-center"scope="col">Obs.</th>
                <th class="text-center"scope="col">Total</th>
                <!--  <th class="text-center"scope="col">Abrir</th>-->
                <!--  <th class="text-center"scope="col">Deletar</th>-->
                <th class="text-center" scope="col">Comprovante</th>
                <th class="text-center"scope="col">Data</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <%      var item=0;
                        var total = 0;
                        for (var i = 0; i < pedidos.length; i++){
                        total = pedidos[i].total+total;
                        item++;
                        console.log
                        var data = new Date(pedidos[i].data);
                        var dataFormatada = ((data.getDate() )) + "/" + ((data.getMonth() + 1)) + "/" + (data.getYear()-100);
                %>       
    
                <!--  <th class="text-center" scope="row"><%= item %></th>-->
                <td class="text-center"><a class="btn btn-info" href="/pedido?id=<%= pedidos[i].id %>"> <%= pedidos[i].id %></a></td>                
                <td class="text-center"><%= pedidos[i].fase %></td>
                <td class="text-center"><%= pedidos[i].obs %></td>
                <td class="text-center"><%= pedidos[i].total %></td>
                <!--  <td class="text-center"><button  type="button" class="btn btn-outline-info btn-sm" onclick="window.location.href='/pedido?id=<%= pedidos[i].id %>'">Abrir/Alterar</button></td>-->
                <!--  <td class="text-center" ></td>-->
                <% if (pedidos[i].tipo==0) {%>
                <td class="text-center"> 
                  <a class="btn btn-warning" > NÃ£o                    
                  </a>
                </td>
                <% } else {%>
                  <td class="text-center"> 
                    <a class="btn btn-success" href="/fotos/<%= pedidos[i].id %>.<%= pedidos[i].tipo %>"> Abrir                    
                    </a>
                  </td>

                <% } %>

                <td class="text-center"><%= dataFormatada %> </td>

              </tr> 
              <% }}
              var dinheiro = total.toLocaleString('pt-br',{style: 'currency', currency: 'BRL'});
              %>   
              <h3>Total dos pedidos: <%= dinheiro %></h3>   
            </tbody>
        </table> 
        <script>
          $(document).ready(function(){
              $('[data-toggle="popover"]').popover();   
          });
          </script>
      


