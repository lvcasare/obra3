      <table class="table">
        <thead>
          <tr>
            <th class="text-center" scope="col">Pedido</th>
            <th class="text-center" scope="col">Pagador</th>
            <th class="text-center" scope="col">Valor</th>
            <th class="text-center" scope="col">Data</th>
            <th class="text-center" scope="col">Obs.</th>
            <th class="text-center" scope="col">Comprovante</th>
          </tr>
        </thead>
        <tbody>
          
            <%      var item=0;
            var total=0;
            for (var i = 0; i < pagamentos.length; i++){
              
            item++;
            var data = new Date(pagamentos[i].data);
            var dataFormatada = ((data.getDate() )) + "/" + ((data.getMonth() + 1)) + "/" + (data.getYear()-100);
            if (pagamentos[i].pagador=="Andrew"){
              total = total+pagamentos[i].valor;
            %>       
            <tr>
              <th class="text-center" scope="row"><%= pagamentos[i].pedidoid%></th>
              <td class="text-center"><%= pagamentos[i].pagador%></td>
              <td class="text-center"><%= pagamentos[i].valor%></td>
              <td class="text-center"><%= dataFormatada%></td>
              <td class="text-center"><%= pagamentos[i].obs%></td>
              <td class="text-center">
                <% if (pagamentos[i].img==1) {%> 
                  <a href="/pag/<%= pagamentos[i].id%>.jpg"> 
                <% } else {%> 
                  <a href="/pagamento/upload?id=<%= pagamentos[i].id%>&pedidoid=<%= pagamentos[i].pedidoid%>"> 
                <% }%>
                <img alt="img"  class="border border-success" style="width: 40px; height: 25px;" 
                src="/pag/<%= pagamentos[i].id%>.jpg" alt="">
              </a>            
            </td>                
            </tr>
            <%}}%>          
        </tbody>

